<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lightgrey"
    tools:context="com.bezzy.Ui.View.activity.Fragments.Video_fragment">

    <RelativeLayout
        android:id="@+id/back_bezy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_button">

        <TextView
            android:id="@+id/go_bezzy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/back_image"
            android:fontFamily="sans-serif-light"
            android:text="Video"
            android:textColor="@color/gradstart"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/back_bezy"
        android:background="@color/lightgrey"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ed_commnets"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_button2"
            >

            <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
                android:id="@+id/ed_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write Something here....."
                android:minLines="3"
                android:layout_marginRight="10dp"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:textSize="16sp"
                android:textColorHint="@color/gradstart"
                android:padding="5dp"
                android:background="@color/colourwhite"
                android:layout_toRightOf="@+id/emoji_btn"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/emoji_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_happy"
                android:layout_marginRight="-10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"/>


            <Button
                android:id="@+id/upload_post"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/login_button_background"
                android:text="Upload Video"
                android:textColor="#fff"
                android:textSize="12sp"
                android:layout_below="@+id/ed_content"
                android:layout_toLeftOf="@+id/upload"/>

            <Button
                android:id="@+id/upload"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_below="@+id/ed_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/login_button_background"
                android:text="POST"
                android:textColor="@color/colourwhite"
                android:textSize="12sp" />

        </RelativeLayout>



        <VideoView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:backgroundTint="@drawable/bezzy_upload"
            android:id="@+id/video_view"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fitsSystemWindows="true"
            android:visibility="invisible"/>


    </LinearLayout>


</RelativeLayout>