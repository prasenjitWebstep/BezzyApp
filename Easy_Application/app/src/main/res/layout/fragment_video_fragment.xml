<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.bezzy.Ui.View.activity.Fragments.Video_fragment">

    <RelativeLayout
        android:id="@+id/back_bezy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_button">

        <TextView
            android:id="@+id/go_bezzy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/back_image"
            android:fontFamily="sans-serif-light"
            android:text="New Post"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            />
        <Button
            android:id="@+id/upload"
            android:textSize="16sp"
            android:text="POST"
            android:background="@drawable/login_button_background"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:backgroundTint="@drawable/bezzy_upload"
        android:id="@+id/video_view"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>




    <EditText
        android:id="@+id/ed_content"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:hint="Say Something....."
        android:layout_centerInParent="true"
        android:inputType="textMultiLine"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColorHint="@color/gradstart"
        android:layout_below="@id/image_view"
        android:background="@color/colourwhite"
        android:minLines="5"
        android:gravity="top"
        android:padding="5dp"/>

