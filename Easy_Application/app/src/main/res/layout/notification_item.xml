<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TEXTbORDER"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:layout_toRightOf="@+id/TEXTbORDER">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    app:civ_border_width="0.5dp"
                    app:civ_border_color="#5ADDED"
                    android:layout_alignParentLeft="true"/>
                <LinearLayout
                    android:id="@+id/text_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/img_logo">
                    <TextView
                        android:id="@+id/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:maxLines="3"

                        />
                    <TextView
                        android:id="@+id/descrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 New Post"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"/>

                    <RelativeLayout
                        android:id="@+id/relativeAcceptRejectShow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/acceptButton"
                            android:text="ACCEPT"
                            android:textSize="12sp"
                            android:backgroundTint="@color/gradstart"
                            android:background="@drawable/rounded_button2"
                            android:textColor="@color/colourwhite"
                            android:layout_marginRight="10dp"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/rejectButton"
                            android:layout_toRightOf="@+id/acceptButton"
                            android:text="decline"
                            android:textSize="12sp"
                            android:backgroundTint="@color/lightgrey"
                            android:background="@drawable/rounded_button2"/>
                    </RelativeLayout>
                </LinearLayout>


                <ImageView
                    android:id="@+id/add_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/birthday"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="70dp"
                    android:visibility="gone"/>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>