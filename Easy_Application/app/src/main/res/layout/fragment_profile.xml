<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.bezzy.Ui.View.activity.Fragments.ProfileFragment">
    <RelativeLayout
        android:id="@+id/back_bezy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_button">

        <TextView
            android:id="@+id/go_bezzy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/back_image"
            android:fontFamily="sans-serif-light"
            android:text="Profile"
            android:textColor="@color/gradstart"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"/>

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_logout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/user_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_bezy"
        android:background="@color/lightgrey"
        >
        <LinearLayout
            android:id="@+id/user_image"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circularImg"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".3"
                app:civ_border_width="0.5dp"
                app:civ_border_color="@color/gradstart"
                android:layout_gravity="top"
                android:src="@drawable/assess_profile1"
                android:layout_margin="2dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:padding="3dp"
                    android:textSize="15sp"
                    android:textColor="@color/colourblack"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-medium"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/userFriendsHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="3dp"
                        android:textColor="@color/deeporange"
                        android:textStyle="normal"
                        android:text="Friends"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/userFriends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="12sp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="3dp"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium"
                        android:text="265"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/userBioHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="14sp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="3dp"
                    android:textColor="@color/deeporange"
                    android:textStyle="normal"
                    android:text="Bio"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/userBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="3dp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="3"
                    />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/noti"
                style="?attr/actionButtonStyle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:clipToPadding="false"
                android:focusable="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/cart_items"
                android:backgroundTint="@color/gradstart"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/editProfile"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:src="@drawable/ic_pencil"
                    app:tint="@color/white"
                    />

            </FrameLayout>

            </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lightgrey"
        android:layout_below="@id/user_edit"/>




    <LinearLayout
        android:id="@+id/user_descrecyl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_below="@id/divider"
        android:weightSum="3"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/following_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="456"
                android:padding="1dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:textStyle="normal"
                android:textColor="#000"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:id="@+id/following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Following"
                android:padding="1dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textStyle="normal"
                android:textColor="#000"
                android:fontFamily="sans-serif-thin"
                android:paddingRight="2dp"
                android:layout_below="@id/following_num"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/follower_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.1"
                android:padding="3dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:textStyle="normal"
                android:textColor="#000"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:id="@+id/followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Followers"
                android:padding="3dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textStyle="normal"
                android:textColor="#000"
                android:fontFamily="sans-serif-thin"
                android:paddingRight="2dp"
                android:layout_below="@id/follower_num"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="456"
                android:padding="3dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:textStyle="normal"
                android:textColor="#000"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like"
                android:padding="3dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textStyle="normal"
                android:textColor="#000"
                android:fontFamily="sans-serif-thin"
                android:paddingRight="2dp"
                android:layout_below="@id/like_num"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/edit_part"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_descrecyl">



    </RelativeLayout>
