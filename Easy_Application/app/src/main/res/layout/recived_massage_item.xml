<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layoutreceiver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/recived_msg_bgr"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true">
            <TextView
                android:id="@+id/rcv_message_body"
                android:text="hi man, how are you?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/rcv_message_time"
                android:text="11:40 am"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/rcv_message_body"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutreceiverimage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/recived_msg_bgr"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/send_message_image"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:src="@drawable/fgh"/>

            <RelativeLayout
                android:id="@+id/tick_part_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/send_message_image"
                android:layout_gravity="bottom"
                android:layout_marginBottom="3dp"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/rcv_image_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="2dp"
                    android:padding="5dp"
                    android:text="11:40 PM"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:textSize="10sp" />

            </RelativeLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/falseTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>



</RelativeLayout>