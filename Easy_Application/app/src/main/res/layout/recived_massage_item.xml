<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutreceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_orange"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/rcv_message_body"
            android:text="hi man, how are you?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/rcv_message_time"
            android:text="11:40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginLeft="4dp"
            android:layout_gravity="bottom"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/send_msg_backgr"
        android:layout_below="@+id/layoutreceiver"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/layoutreceiver"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/send_message_body"
            android:text="hi man, how are you?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/send_message_time"
            android:text="11:40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginLeft="4dp"
            android:layout_gravity="bottom"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"/>

    </LinearLayout>


</RelativeLayout>