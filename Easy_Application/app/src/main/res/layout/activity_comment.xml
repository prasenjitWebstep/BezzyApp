<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bezzy.Ui.View.activity.CommentActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reyclerview_comment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/viewnb"
        android:layout_margin="10dp"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <!-- A horizontal line between the chatbox and RecyclerView -->
    <View
        android:id="@+id/viewnb"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dfdfdf"
        android:layout_marginBottom="0dp"
        android:layout_above="@id/layout_chatbox"
        />
    <RelativeLayout
        android:id="@+id/layout_chatbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_button"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:minHeight="48dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/gallery"
            android:background="@drawable/comment_backgr"
            >

            <EditText
                android:id="@+id/edittext_comment"
                android:hint="Enter message"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="6"/>

            <ImageView
                android:id="@+id/send_msg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/right_arrow"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                app:tint="#A8A4A4"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/gallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/landscape"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            app:tint="#A8A4A4"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>

    </RelativeLayout>



</RelativeLayout>