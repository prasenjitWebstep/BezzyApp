<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/send_msg_backgr"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/msg_part"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.8"
            android:orientation="horizontal"


            >

            <TextView
                android:id="@+id/send_message_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:maxLines="5"
                android:text="hi man, how are you?"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tick_part"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/msg_part"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@id/msg_part"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/send_message_time"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_below="@id/msg_part"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/msg_part"
                android:layout_weight="0.3"
                android:text="11:40 PM"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/delivered_tick"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="5dp"

                android:layout_weight="0.3"
                android:src="@drawable/ic_double_tick_indicator"
                android:visibility="visible"

                app:tint="@color/colourwhite" />

            <ImageView
                android:id="@+id/send_tick"
                android:layout_width="8dp"
                android:layout_height="9dp"

                android:layout_marginRight="8dp"


                android:layout_weight="0.2"
                android:src="@drawable/ic_tick"
                android:visibility="invisible"
                app:tint="@color/white" />
        </LinearLayout>


    </LinearLayout>

