<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layoutSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/send_msg_backgr"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/send_message_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="hi man, how are you?"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/send_message_time"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_below="@id/send_message_body"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/send_message_body"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/send_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/send_message_time"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/send_message_body"
                android:src="@drawable/ic_tick"
                app:tint="@color/white"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/delivered_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/send_message_time"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/send_message_body"
                android:src="@drawable/ic_double_tick_indicator"
                app:tint="@color/colourwhite"
                android:visibility="invisible"/>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>