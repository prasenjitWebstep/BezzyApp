<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        app:civ_border_width="0.5dp"
        app:civ_border_color="#5ADDED"

       />

    <LinearLayout
        android:id="@+id/text_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_logo"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/comment_list_bgr"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/comment_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="comment"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:singleLine="false"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/text_part">

        <TextView
            android:id="@+id/timeshow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Last seen 12h ago"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:textColor="#787474"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/text_part"
            android:layout_toRightOf="@id/img_logo" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/following_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:textStyle="normal"
                android:textColor="#CFCFCF"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-medium"
                android:layout_toRightOf="@id/favBtn"/>

            <ImageView
                android:id="@+id/favBtn"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_heart"
                app:tint="@color/gradstart" />

            <ImageView
                android:id="@+id/favBtnfilled"
                android:src="@drawable/ic_favorite_filled"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:visibility="invisible"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/text_part"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/following_numm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:textStyle="normal"
                android:textColor="#CFCFCF"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-medium"
                android:layout_toRightOf="@id/chat_btn"/>

            <ImageView
                android:id="@+id/chat_btn"
                android:src="@drawable/ic_speech_bubble"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                app:tint="@color/gradstart"/>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>